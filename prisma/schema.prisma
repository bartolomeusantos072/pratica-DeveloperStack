generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id       Int      @id @default(autoincrement())
  question String
  answers  Answer[]

  @@map("questions")
}

model Answer {
  id         Int      @id @default(autoincrement())
  answer     String
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])

  @@map("answers")
}
